{
  "name": "Java Serverless (Maven + LocalStack)",

  "image": "mcr.microsoft.com/devcontainers/java:17-bullseye",

  "dockerComposeFile": [
    "docker-compose.yml"
  ],

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "remoteEnv": {
    "PATH": "/home/vscode/.sdkman/candidates/maven/current/bin:${containerEnv:PATH}"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "ms-azuretools.vscode-docker",
        "amazonwebservices.aws-toolkit"
      ]
    }
  },

  "postCreateCommand": "npm install -g serverless && npm install -g serverless-localstack",
  "forwardPorts": [4566]
}